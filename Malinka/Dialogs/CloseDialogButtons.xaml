<UniformGrid 
    x:Class="Malinka.Dialogs.CloseDialogButtons"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Malinka.Dialogs"
    Rows="1">

    <Button Style="{StaticResource DialogCancelButton}"/>

    <Button Content="{Binding RelativeSource={RelativeSource AncestorType=local:CloseDialogButtons}, Path=CloseButtonContent}"
            Style="{StaticResource DialogCloseButton}"/>

</UniformGrid>
